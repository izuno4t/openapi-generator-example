root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off

[*.{java,gradle}]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.{sql,script}]
indent_style = tab
indent_size = 4

[*.{html,js,css}]
indent_style = tab
indent_size = 2

[*.xml]
indent_style = tab
indent_size = 4

[Jenkinsfile]
indent_size = 4

[*.{yaml,yml}]
trim_trailing_whitespace = false
